@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutAcessoInterno";
}

<partial name="~/Views/PartialViews/Loading.cshtml" />

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="title">Lista de Formas de Pagamentos</h2>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <a asp-controller="FormasDePagamento" asp-action="NovaFormaDePagamento" class="btn btn-outline-danger">Nova Forma de Pagamento</a>
            </div>
            <table class="table table-hover" id="datatableListaFormasDePagamento">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">Banco</th>
                        <th scope="col">Agência</th>
                        <th scope="col">Conta</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Banco Inter</td>
                        <td>002</td>
                        <td>5545-5</td>
                        <td>
                            <a href="javascript:;" data-toggle="modal" data-target="#modalExcluirFormaDePagamento" class="btn btn-sm btn-dark">Excluir</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Santander</td>
                        <td>04545</td>
                        <td>02654-5</td>
                        <td>
                            <a href="javascript:;" data-toggle="modal" data-target="#modalExcluirFormaDePagamento" class="btn btn-sm btn-dark">Excluir</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Itau</td>
                        <td>2455</td>
                        <td>0658-6</td>
                        <td>
                            <a href="javascript:;" data-toggle="modal" data-target="#modalExcluirFormaDePagamento" class="btn btn-sm btn-dark">Excluir</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Finalizar Sorteio -->
<div class="modal fade" id="modalExcluirFormaDePagamento" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-0">
                <h5 class="title m-0 text-center">Excluir Forma de Pagamento</h5>
                <p class="text-center">Tem certeza que deseja excluir essa Forma de Pagamento?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-dark btn-sm" data-dismiss="modal">Fechar</button> &#160;
                <button type="button" class="btn btn-success btn-sm">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Pages/FormasDePagamento/Index.js" type="text/javascript" asp-append-version="true"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
