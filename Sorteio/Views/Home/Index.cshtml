@{
    ViewData["Title"] = "Home Page";
    @model IEnumerable<Sorteio.Domain.Models.NotMapped.InformacoesSorteio>;
}

<div class="page-header header-filter fundo_vermelho" data-parallax="true">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="display-6">NÓS SOMOS</h3>
                <h1 class="display-5"><b>FIRE SORTEIOS!</b></h1>
                <h4>Every landing page needs a small description after the big bold title, that&apos;s why we added this text here. Add here all the information that can make you or your product create the first impression.</h4>
                <br>
            </div>
            <div class="col-md-6">
                <img src="~/img/logo.jpeg" alt="Fire Sorteios" class="logo" />
            </div>
        </div>
    </div>
</div>

<div class="main main-raised" id="sorteio-em-andamento">
    <div class="container">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title">SORTEIOS EM ANDAMENTO</h2>
                    <h4 class="description">Varios participantes já tiveram seus sonhos realizados.</h4>
                    <h5 class="description text-dark"><b>Você pode ser o próximo!</b></h5>
                </div>
            </div>
            <div class="features">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        if (item.status == false)
                        {
                            <div class="col-md-4">
                                <div class="info">
                                    <div class="card card-nav-tabs">
                                        <div class="card-body card-img-principal" style="background: url(https://cdn.pixabay.com/photo/2016/04/07/06/53/bmw-1313343_960_720.jpg);">
                                        </div>
                                        <div class="card-header card-header-danger">
                                            <text class="titulo-card-sorteios"><b>@item.edicao° Edição</b></text>
                                        </div>
                                        <div class="card-body">
                                            <div class="row info-numeros">
                                                <div class="col-md-4">
                                                    <h5>
                                                        <b>@item.quantidade_numeros</b><br />números
                                                    </h5>
                                                </div>
                                                <div class="col-md-4">
                                                    <h5>
                                                        <b>00</b><br />reservados
                                                    </h5>
                                                </div>
                                                <div class="col-md-4">
                                                    <h5>
                                                        <b>00</b><br />pagos
                                                    </h5>
                                                </div>
                                            </div>
                                            <p class="card-text">@item.nome</p>
                                            <a asp-controller="Home" asp-action="Sorteio" class="btn btn-dark">Comprar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>

                <div class="row m-5 bg-info">
                    <div class="m-auto">
                        <b>SESSÃO PARA LINKAR O INSTAGRAN</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main main-raised fundo_vermelho">
    <div class="container">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title text-white">ÚLTIMOS SORTEIOS REALIZADOS</h2>
                    <h4 class="description text-white">Confira abaixo os nossos últimos sorteios</h4>

                    <select id="select_categoria_sorteio" class="selectpicker" data-style="btn-danger">
                        <option selected value="0">Todos</option>

                        @foreach (var item in (IEnumerable<Sorteio.Domain.Models.EntityDomain.CategoriaSorteio>)ViewBag.CategoriaSorteio)
                        {
                            <option value="@item.id_categoria_sorteio">@item.nome</option>
                        }
                    </select>

                </div>
            </div>
            <div class="features">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        if (item.status == true)
                        {
                            <div class="col-md-4">
                                <div class="info">
                                    <div class="card card-nav-tabs">
                                        <div class="card-body card-img-principal" style="background: url(https://cdn.pixabay.com/photo/2016/04/07/06/53/bmw-1313343_960_720.jpg);">
                                        </div>
                                        <div class="card-header card-header-danger">
                                            <text class="titulo-card-sorteios"><b>@item.edicao° Edição</b></text>
                                        </div>
                                        <div class="card-body">
                                            <h4>
                                                <b>GANHADOR</b> <br />
                                                @item.nome_ganhador
                                            </h4>
                                            <h5>
                                                <b>Sorteado: </b> n°@item.numero_sorteado
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="main main-raised rodape">
    <div class="container">
        <br /><br />
        <div>
            <img src="~/img/logo.jpeg" class="logo" />,
            <div class="row redes-sociais d-flex justify-content-center">
                <img class="img-fluid" src="~/img/face.png" alt="Facebook" style="width: 50px; height: 50px;" />
                <img class="img-fluid" src="~/img/instagran.png" alt="Instagran" style="width: 50px; height: 50px;"/>
                <img class="img-fluid" src="~/img/whatsapp.png" alt="Whatsapp" style="width: 50px; height: 50px;"/>
            </div>

            <div class="text-center mt-3">
                <a href="#">HOME</a> | <a href="#">ÚLTIMOS SORTEIOS</a>
                <br />
                <a href="#">ENVIE SEU COMPROVANTE</a> | <a href="#">TIRE SUAS DÚVIDAS</a>
                <br /><br />
            </div>
            <div class="copyright text-center">
                <b> &copy;
                <script>
                    document.write(new Date().getFullYear())
                </script>
                Fire Sorteios</b>
            </div>
        </div>
        <br /><br />
    </div>
</div>

<script src="~/js/Pages/Home/Index.js" asp-append-version="true" type="text/javascript"></script>