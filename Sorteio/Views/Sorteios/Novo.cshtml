@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutAcessoInterno";
}

<partial name="~/Views/PartialViews/Loading.cshtml" />

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="title">Novo Sorteio</h2>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-md-12 text-center">
                    <label for="file-input" class="selecionar_arquivo">
                        <p class="m-0">Selecionar fotos do sorteio</p>
                        <i class="material-icons">cloud_upload</i>
                    </label>
                    <input id="file-input" type="file" multiple />
                    <div id="preview"></div>
                </div>
            </div>

            <div id="inputs_de_links_gerados"></div>

            <form>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Nome do Sorteio</label>
                        <input type="text" class="form-control" placeholder="Meu novo sorteio">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Edição</label>
                        <input type="text" class="form-control" placeholder="Número da Edição">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Valor</label>
                        <input type="text" class="form-control" placeholder="R$ 10,00">
                    </div>
                    <div class="form-group col-md-3">
                        <label>Quant. de números</label>
                        <input type="text" class="form-control" placeholder="100">
                    </div>
                    <div class="form-group col-md-3 alinhar-embaixo">
                        <select class="selectpicker" data-style="btn-dark">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputAddress">Descrição curta</label>
                        <input type="text" class="form-control" placeholder="Minha descrição curta">
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-md-12">
                    <div class="summernote"></div>
                </div>
            </div>

            <button id="edit" class="btn btn-outline-info btn-sm" onclick="edit()">Editar</button>
            <button id="save" class="btn btn-outline-success btn-sm" onclick="save()">Salvar</button>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<script src="~/js/Pages/Sorteios/NovoSorteio.js" type="text/javascript" asp-append-version="true"></script>
<script src="~/js/plugins/summernote-pt-br.js" type="text/javascript" asp-append-version="true"></script>